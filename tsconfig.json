{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "declaration": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
